@(loginForm: Form[Login])

<div class="container-fluid">
	<div class="row">
		<div class="span12">
		
			<!-- panel -->
			<div class="panel panel-default">
				<div class="panel-body">
				
					<!-- search -->
					<form class="navbar-form navbar-left" role="search">
						<div class="form-group">
							<input type="text" class="form-control" placeholder="Artist/Titel" id="search" />
							<button type="submit" class="btn btn-default">Suchen</button>
						</div>
					</form>	
					<!-- search -->	

					<!-- login -->
							@if(session.get("username") == null){
								@helper.form(routes.Application.authenticateUser, 'class -> "navbar-right") {
									<div class="form-group">
										<input type="text" class="form-control" placeholder="Benutzer" id="Username" />
										<input type="text" class="form-control" placeholder="Passwort" id="Password" />
										<button type="submit" class="btn btn-primary">Anmelden</button>
									</div>
								}
							}else{
								<h3>Willkommen <span class="label label-info">@session.get("username")</span></h3>
								<button type="button" class="btn btn-primary"> <a href="@routes.Application.logoutUser()" style="color:white">Abmelden</a> </button>
							}
					<!-- login -->	
					
				</div>
			</div>
			<!-- panel -->
			
		</div>
	</div>
</div>